#include<iostream>
using namespace std;
int main()
{
  int x,y;int n;int i;
  cin>>n;
  for(i=0;i<n;i++)
  {
  cin>>x;
  cin>>y;
   while(y!=0 && x!=0)
    {if(x>=y)
    {
        x=x-y;}
        else{
            x=0;
        }
        y=y/2;

    }
    if(x==0)
    {
        cout<<"1\n";
    }
    else if(y==0)
    {
        cout<<"0\n";

    }
    else{
        return 0;
    }
    
}return 0;
}
