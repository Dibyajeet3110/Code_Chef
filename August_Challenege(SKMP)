#include<iostream>
#include<bits/stdc++.h>
using namespace std;
int main()
{
    int n;
    cin>>n;
    while(n--)
    {
        string s,q,p,r;
        int i,j,b=0,k,d=0,a=0,l=0;
        cin>>s;
        cin>>p;
        q=p;
        int m=s.length();
        k=p.length();
        sort(s.begin(),s.end());
        sort(p.begin(),p.end());
       for(i=0;i<m;i++)
       {
        if(s[i]!=p[b])
        {
            r[a]=s[i];
             a++;
            
        }
        else
        {
         b++;
        }
    }
    char t=q[0];
    for(i=0;i<a;i++)
    {
         
        if(r[i]==t||r[i]<t)
        {
            d++;             
        }
    }
    for(i=a-1;i>=d;i--)
        {
            r[i+k]=r[i];
        }
        
        for(i=d;i<d+k;i++)
        {
            r[i]=q[l];
            l++;
        }
        for(i=0;i<m;i++)
        {
            cout<<r[i];
        }
         
          
    }
    return 0;
}
